{% extends 'base.html.twig' %}

{% block title %}Instruktoriaus profilis{% endblock %}

{% block body %}
    <h1>Instruktoriaus profilis</h1>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_instruktoriaiRedaguoti', {'insId':instr.id}) }}" class="btn btn-primary">Redaguoti</a>
{% endif %}
<table class="table" style="width:30%">
        <tr>
            <th>Vardas</th>
            <td>{{ instr.vardas }}</td>
        </tr>
        <tr>
            <th>Pavardė</th>
            <td>{{ instr.pavarde }}</td>
        </tr>
        <tr>
            <th>Asmens Kodas</th>
            <td>{{ instr.asmens_kodas }}</td>
        </tr>
        <tr>
            <th>Gimimo data</th>
            <td>{{ instr.gimimo_data|date("Y-m-d", false) }}</td>
        </tr>
        <tr>
            <th>Vairavimo stažas metais</th>
            <td>{{ instr.vairavimo_stazas_metais }}</td>
        </tr>
        <tr>
            <th>Telefono numeris</th>
            <td>{{ instr.telefono_numeris }}</td>
        </tr>
        <tr>
            <th>Darbovietė</th>
            <td>{{ filialas.pavadinimas }}</td>
        </tr>
    </table>

{% endblock %}
