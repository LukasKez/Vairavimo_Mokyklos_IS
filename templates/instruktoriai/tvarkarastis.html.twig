{% extends 'base.html.twig' %}

{% block title %}Instruktoriaus tvarkaraštis{% endblock %}

{% block body %}
    <h1>Instruktoriaus tvarkaraštis</h1>

    <br/>
    <h4>Pravažiavimai</h4>
    <table class="table">
    
        <tr>
            <th>Pravažiavimo Data</th>
            <th>Įvertinimas</th>
        </tr>

        <tr>
            {% for pravaziavimas in pravaziavimai %}
            <tr>
            
            <td>{{ pravaziavimas.data|date("Y-m-d G:i:s") }}</td>
            <td style="text-align: left">{{ pravaziavimas.ivertinimas }}</td>
            </tr>
            {% endfor %}
        </tr>

    </table>

    <h4>Egzaminai</h4>
    <table class="table">
    
        <tr>
            <th>Tipas</th>
            <th>Data ir laikas</th>
            <th>Adresas</th>
        </tr>

        <tr>
            {% for egzaminas in egzaminai %}
            <tr>
            <td>{{ egzaminas.name }}</td>
            <td>{{ egzaminas.data|date("Y-m-d G:i:s") }}</td>
            <td style="text-align: left">{{ egzaminas.adresas }}</td>
            </tr>
            {% endfor %}
        </tr>

    </table>

{% endblock %}
