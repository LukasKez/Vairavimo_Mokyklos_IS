                <td>{{ instruktorius.pavarde }}</td>
                <td>
                    <a href="{{ path('app_instruktoriaiProfilis', {'insId':instruktorius.id}) }}" class="btn btn-success">Peržiūrėti profilį</a>
                </td>
            </tr>
            {% endfor %}
            </tr>
        </table>
    {% endif %}

    {% if is_granted('ROLE_INSTRUKTORIUS') %}
        <h1>Instruktorius:</h1>
        <table class="table">
