{% extends 'base.html.twig' %}

{% block title %}Egzaminai{% endblock %}

{% block body %}
    <h1>Egzaminų sąrašas:</h1>
    <a href="{{ path('app_siustiLaiska') }}" class="btn btn-primary my-1 float-right">Siųsti laišką</a>
    <table class="table">
        <tr>
            <th>Nr</th>
            <th>Tipas</th>
            <th>Laikas</th>
            <th>Adresas</th>
            <th>Funkcijos</th>
        </tr>
        {% for egzaminas in egzaminai %}
            <tr>
                <td>{{ egzaminas.id }}</td>
                <td>{{ egzaminas.getEgzaminoTipas.name }}</td>
                <td>{{ egzaminas.data|date("Y-m-d", false) }} {{ egzaminas.laikas }}</td>
                <td>{{ egzaminas.adresas }}</td>
                <td>
                    <a href="{{ path('app_itrauktiEgzamina') }}" class="btn btn-success">Įtraukti į tvarkaraštį</a>
                    <a href="{{ path('app_redaguotiEgzamina', {slug: egzaminas.id}) }}" class="btn btn-primary">Redaguoti</a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
