{% extends 'base.html.twig' %}

{% block title %}Redaguoti egzaminą{% endblock %}

{% block body %}
    <h1>Redaguoti egzaminą</h1>

    <br/>
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-horizontal" role="form" method="POST" action="{{ path('app_pakeistiEgzamina', {slug: egzaminas.id}) }}">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Tipas</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" name="tipas" value="{{ egzaminas.getEgzaminoTipas.name }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Data</label>
                        <div class="col-md-12">
                            <input type="date" class="form-control" name="data" value="{{ egzaminas.data|date("Y-m-d", false) }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Laikas</label>
                        <div class="col-md-12">
                            <input type="time" class="form-control" name="laikas" value="{{ egzaminas.laikas }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Adresas</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" name="adresas" value="{{ egzaminas.adresas }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 col-md-offset-4">
                            <button type="submit" class="btn btn-primary">
                                <span class="glyphicon glyphicon-refresh"></span>
                                Patvirtinti
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
